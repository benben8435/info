<div class="page-header">
  <center><h1>Sign up</h1></center>
</div>

<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="row top30"></div>
    <%= render "partial/notice" %>

    <div class="form-horizontal">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.label :email, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.email_field :email, autofocus: true, class: "form-control"  %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label 'password', class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.password_field :password, autocomplete: "off", class: "form-control", :placeholder=> min_password %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label 'confirmation', class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", :placeholder=> min_password %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :first_name, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :first_name, autocomplete: "off", class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :last_name, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :last_name, autocomplete: "off", class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :cellphone, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.phone_field :cellphone, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= link_to 'Back', :back, class: "btn btn-default pull-right"%>
          <%= f.submit "Sign Up", class: "btn btn-primary pull-right" %>
        </div>
      <% end %>
    </div>
    <%= render "users/shared/links" %>
  </div>
</div>